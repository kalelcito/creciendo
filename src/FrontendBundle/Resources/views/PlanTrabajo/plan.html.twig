{% extends '@Frontend/layout.html.twig' %}
{% block title %}{{ parent() }} | Plan de Trabajo{% endblock %}
{% block stylesheets %}
    <style>
        .section-padding {
            margin-left: 3%;
            margin-right: 3%;
        }
        #impresion {
            font-size: 11pt;
        }
        .wrapper1, .wrapper2 {
            width: 100%;
            overflow-x: scroll;
            overflow-y:hidden;
        }
        .wrapper1 {height: 20px; }
        .wrapper2 {height: 1550px; }
        .div1 {
            width:2000px;
            height: 20px;
        }
        .div2 {
            width:2000px;
            height: 1550px;
            overflow: auto;
        }
    </style>
{% endblock %}
{% block body %}
    <script type="text/javascript">
        $(function(){
            $(".wrapper1").scroll(function(){
                $(".wrapper2").scrollLeft($(".wrapper1").scrollLeft());
            });
            $(".wrapper2").scroll(function(){
                $(".wrapper1").scrollLeft($(".wrapper2").scrollLeft());
            });
        });

        $( document ).ready(function() {
            (function($) {
                $.fn.setCursorPosition = function(pos) {
                    if ($(this).get(0).setSelectionRange) {
                        $(this).get(0).setSelectionRange(pos, pos);
                    } else if ($(this).get(0).createTextRange) {
                        var range = $(this).get(0).createTextRange();
                        range.collapse(true);
                        range.moveEnd('character', pos);
                        range.moveStart('character', pos);
                        range.select();
                    }
                }
            }(jQuery));

            {% for i in 1..25 %}
            {% for j in 1..25 %}
            {% if j==2 or j==3 or j==4 or j==5 or j==6 %}
            $("#nombre{{ j }}{{ i }}").keyup(function(){
                this.value = this.value.replace(/[^0-9\.]/g,'');
                if ($(this).val().split('').pop() !== '%') {
                    $(this).val($(this).val() + "%");
                    $(this).setCursorPosition( $(this).val().length - 1)
                }
            });
            {% endif %}
            {% endfor %}
            {% endfor %}
        });
    </script>
    <div class="section section-padding courses-detail">
            <div class="courses-detail-wrapper">
                <div class="row">
                    <div class="col-md-12" >
