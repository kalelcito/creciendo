    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'Empresa Responsable','submenu':'Niveles'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Niveles</h3>
               {#<p class="text-muted m-b-30">{{ Niveles</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Precio Mensual</th>
                        <th>Precio Anual</th>
                        <th>Moneda</th>
                        <th>Moneda Letra</th>
                        <th>Activo</th>
                        <th>Permisos</th>
                        <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for nivele in niveles %}
                    <tr>
                        <td><a href="{{ path('niveles_show', { 'id': nivele.id }) }}">{{ nivele.id }}</a></td>                                <td>{{ nivele.nombre }}</td>                                <td>{{ nivele.preciomensual }}</td>                                <td>{{ nivele.precioanual }}</td>                                <td>{{ nivele.moneda }}</td>                                <td>{{ nivele.monedastr }}</td>                                <td>{{ nivele.activo|sino }}</td>                                <td>{{ nivele.permisos }}</td>                               <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('niveles_show', { 'id': nivele.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                        <a href="{{ path('niveles_edit', { 'id': nivele.id }) }}" data-toggle="tooltip" title="Editar" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
