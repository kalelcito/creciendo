{% extends '@Frontend/layoutlogin.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block javascripts %}
{% endblock %}
{% block body %}
    <div class="page-login rlp" style="background-image: none; background-color: #004f6e; ">
        <div class="container">
            <div class="login-wrapper rlp-wrapper">
                <div class="login-table rlp-table">
                    <a href="{{ path('login') }}">
                        <img src="{{ asset('assets/images/logo.png') }}" alt="" class="login" style="height: 100px; width: auto;"/>
                    </a>
                    <div class="login-title rlp-title">Recuperar Contraseña</div>
                    <form method="post" action="{{ path('recuperar') }}" role="form" class="">
                        <div class="login-form bg-w-form rlp-form">
                            <div class="row">
                                {% if registrado==1 %}
                                    <p>Se ha procesado la solicitud exitosamente, en breve recibirás información relacionada con la recuperación de tu contraseña.</p>
                                {% elseif registrado==2 %}
                                        <p style="text-align: center;">El Email proporcionado no existe.</p>
                                {% else %}
                                    <div class="col-md-12">
                                        <label for="regemail" class="control-label form-label">email <span class="highlight">*</span></label>
                                        <input type="email" name="email" required="required" placeholder="Correo Electrónico" class="form-control  form-input" />
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        {% if registrado==1 %}
                            <div class="login-submit">
                                <a href="{{ path("login") }}" class="btn btn-register btn-green" ><span style="font-size: 14px;">Regresar</span></a>
                            </div>
                        {% elseif registrado==2 %}
                                <div class="login-submit">
                                    <a href="{{ path("recuperar") }}" class="btn btn-register btn-green" ><span style="font-size: 14px;">Regresar</span></a>
                                </div>
                        {% else %}
                            <div class="login-submit">
                                <a href="{{ path("login") }}" class="btn btn-register btn-green" ><span style="font-size: 14px;">Regresar</span></a>
                                <button type="submit" class ="btn btn-register btn-green"><span style="font-size: 14px;">Enviar</span></button>
                            </div>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
