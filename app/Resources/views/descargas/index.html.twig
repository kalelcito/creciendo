    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'Empresa Responsable','submenu':'Descargas'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Descargas</h3>
               {#<p class="text-muted m-b-30">{{ Descargas</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>                            <th>Nombre</th>                            <th>Descripcion</th>                            <th>Archivo</th>                                   <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for descarga in descargas %}
                    <tr>
                            <td><a href="{{ path('descargas_show', { 'id': descarga.id }) }}">{{ descarga.id }}</a></td>                                <td>{{ descarga.nombre }}</td>                                <td>{{ descarga.descripcion }}</td>                                <td>{{ descarga.archivo }}</td>                                                     <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('descargas_show', { 'id': descarga.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                        <a href="{{ path('descargas_edit', { 'id': descarga.id }) }}" data-toggle="tooltip" title="Editar" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
