                                {% endif %}
                            </div>
                        </div>

                    </div>
                    <div class="contact-submit">
                        {{ form_widget(form.enviar, {'attr': {'class ': 'btn btn-contact btn-green'} }) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% else %}
        <div class="section section-padding contact-main">
            <div class="container">
                <div class="contact-main-wrapper">
                    <div class="row"><div class="col-md-12 text-center"><h3 style="margin-bottom: 30px; margin-top: 0px;">Gracias. Nosotros te contactaremos.</h3></div></div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}


