                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label form-label">TELÃ‰FONO <span class="highlight">*</span></label>
                                {{ form_widget(form.telefono, {'attr': {'class': 'form-control  form-input'} }) }}
                                {% if form.telefono.vars.errors|length > 0 %}
                                    <p class="help-block">
                                        {% for error in form.telefono.vars.errors %}
                                            {{ error.message }} <br/>
                                        {% endfor %}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label form-label">COMENTARIO</label>
                                {{ form_widget(form.comentario, {'attr': {'class': 'form-control  form-textarea'} }) }}
                                {% if form.comentario.vars.errors|length > 0 %}
                                    <p class="help-block">
